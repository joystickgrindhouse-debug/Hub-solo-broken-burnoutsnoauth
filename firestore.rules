rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'Socalturfexperts@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }

    // Leaderboard collection
    match /leaderboard/{scoreId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // Chats collection
    match /globalChat/{msgId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    match /global_messages/{msgId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // Private messages
    match /private_messages/{msgId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId || isAdmin());
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId;
      allow update, delete: if isAdmin();
    }
    
    // System Logs
    match /system_logs/{logId} {
      allow read: if isAdmin();
      allow create: if true; 
      allow update, delete: if isAdmin();
    }
    
    // Raffle Winners
    match /raffle_winners/{winnerId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
